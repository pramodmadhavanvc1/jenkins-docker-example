pipeline{
    agent any
    environment {
      DOCKER_TAG = getVersion()
    }
	    stages{
        stage("Git Checkout"){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/pramodmadhavanvc1/jenkins-docker-example.git']]])
            }
        }
        stage("Docker Build"){
            steps{
	        sh "version=`cat version |grep version |awk '{print \$2}'`"
                sh "name=`cat version |grep name |awk '{print \$2}'`"
		sh "echo ${name}"
		sh "echo ${version}"
                sh "docker build . -t  pramodmadhavan/${name}:${version}"
            }
        }
        stage("DockerHub Push"){
            steps{
                withCredentials([string(credentialsId: 'docker-hub', variable: 'dockerHubPwd')]) {
                    sh "docker login -u pramodmadhavan -p ${dockerHubPwd}"
                    sh "docker push pramodmadhavan/${name}:${version}"
                }
                
            }
        }
        stage("Docker Deploy Worker"){
            steps{
                sshagent(['worker-server']) {
                    sh "ssh -o StrictHostKeyChecking=no origin@10.0.2.7 docker rm -f pramodapp"
                    sh "ssh origin@10.0.2.7 docker run -d -p 31315:80 --name pramodapp pramodmadhavan/${name}:${version}"
                }
                
            }
        }
    }
}
def getVersion(){
    def commitHash = sh returnStdout: true, script: 'git rev-parse --short HEAD'
    return commitHash
}
